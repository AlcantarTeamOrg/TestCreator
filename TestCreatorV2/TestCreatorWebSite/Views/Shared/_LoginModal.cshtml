@model TestCreator.Models.TestUser
<div id="logModal" class="modal fade" data-backdrop="static" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3>Logowanie</h3>
            </div>
            <div class="modal-body">
                <div class="row main">
                    <div class="main-login main-center">
                        <form id="loginForm">

                            <div class="form-group">
                                <label for="username" class="cols-sm-2 control-label">Nazwa Użytkownika</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Podaj Login" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="cols-sm-2 control-label">Hasło</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Podaj Hasło" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group ">
                                <button type="button" id="loginButton" class="btn btn-primary btn-lg btn-block login-button" style="width: 60%; margin: auto">Zaloguj</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">zamknij</button>
            </div>
        </div>
    </div>
</div>
