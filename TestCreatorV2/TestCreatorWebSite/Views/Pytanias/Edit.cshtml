@model TestCreatorWebSite.Data.Pytania

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Pytania</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_pytanie)

        <div class="form-group">
            @Html.LabelFor(model => model.tresc_pytania,"Treść pytania", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tresc_pytania, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tresc_pytania, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.is_visible,"Widoczność", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.is_visible)
                    @Html.ValidationMessageFor(model => model.is_visible, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.id_test, "Nazwa testu", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_test", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_test, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Wstecz", "Index")
</div>
