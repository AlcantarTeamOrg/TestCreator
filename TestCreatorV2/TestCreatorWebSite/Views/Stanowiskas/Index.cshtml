@model IEnumerable<TestCreatorWebSite.Data.Stanowiska>

<div class="main">
    <div class="menu">
        <p>
            @Html.ActionLink("Dodaj nowe", "Create", null, new { @class = "btn btn-default btn-lg" })
        </p>
    </div>
    <div class="center-box">
        <h2>Lista stanowisk</h2>
        <hr />
        <table class="table">
            <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model.nazwa_stanowiska)*@
                    Nazwa stanowiska
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.is_visible)*@
                    Widoczność
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nazwa_stanowiska)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.is_visible)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.id_stanowisko }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.id_stanowisko }) |
                </td>
            </tr>
    }

        </table>
    </div>
</div>
