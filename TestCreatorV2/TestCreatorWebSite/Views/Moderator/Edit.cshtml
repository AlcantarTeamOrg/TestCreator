
<hr />
<h3>Zmiana hasła</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Password" class="control-label">Wpisz nowe hasło</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repassword" class="control-label">Powtórz hasło</label>
                <input asp-for="Repassword" class="form-control" />
                <span asp-validation-for="Repassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zmień" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
